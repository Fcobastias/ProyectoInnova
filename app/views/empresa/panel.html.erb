<section class="hero hero-sealai is-fullheight">
  <div class="hero-body">
    <div class="container">

      <div class="card panel-card">
        <h1 class="title is-4 mb-4">Panel de empresa</h1>

        <div class="panel-table-wrapper">
          <table class="table is-striped is-hoverable panel-table">
            <thead>
              <tr>
                <th>Código</th>
                <th>Detalle</th>
                <th>Estado</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% productos = [
                ["CL1234-5678", "Cereza", "OK"],
                ["FR4321-9823", "Nectarines", "Revisar"],
                ["AP5566-1039", "Manzana Fuji", "OK"],
                ["PE8492-3321", "Pera Packham", "OK"],
                ["OR2299-5566", "Naranja", "Revisar"],
                ["KI9988-1112", "Kiwi", "OK"],
                ["UV6677-8890", "Uva Red Globe", "OK"],
                ["LM1029-4488", "Limón", "Revisar"],
                ["PL7744-6655", "Ciruela", "OK"],
                ["CH3301-9922", "Cereza Bing", "OK"],
                ["MA2134-9044", "Mandarina", "Revisar"],
                ["PA5567-2201", "Palta Hass", "OK"],
                ["GR8210-7731", "Granada", "OK"],
                ["ST9912-6642", "Frutilla", "Revisar"],
                ["ME4329-5510", "Melón", "OK"]
              ] %>

              <% productos.each do |codigo, detalle, estado| %>
                <tr>
                  <td><strong><%= codigo %></strong></td>
                  <td><%= detalle %></td>
                  <td>
                    <span class="tag <%= estado == 'OK' ? 'is-success' : 'is-warning' %>">
                      <%= estado %>
                    </span>
                  </td>
                  <td class="acciones-cell">
                    <a class="button is-small is-danger">Descargar PDF</a>
                    <a class="button is-small is-info">Editar</a>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <p class="scroll-hint">
          Desliza horizontalmente para ver más →
        </p>

      </div>

    </div>
  </div>
</section>

<style>
.panel-card {
  padding: 2rem;
  border-radius: 16px;
  box-shadow: 0 15px 30px rgba(0,0,0,0.1);
}

/* CONTENEDOR CON SCROLL X + Y */
.panel-table-wrapper {
  width: 100%;
  max-height: 60vh;      /* aquí controlas la altura visible */
  overflow-x: auto;
  overflow-y: auto;
  border-radius: 8px;
}

/* Forzar ancho horizontal */
.panel-table {
  min-width: 900px;
  width: 100%;
}

.acciones-cell {
  white-space: nowrap;
}

.scroll-hint {
  margin-top: 0.75rem;
  font-size: 0.8rem;
  color: #999;
  text-align: right;
}

.panel-table-wrapper {
  -webkit-overflow-scrolling: touch;
}

/* Prevención de quiebres */
.hero-sealai .container {
  max-width: 100%;
}
</style>
